---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: postgres-operator
  namespace: {{ namespace }}
---
kind: Role
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: pgo-role
  namespace: {{ namespace }}
rules:
- apiGroups:
  - ""
  resources:
  - pods
  - pods/exec
  - pods/log
  - services
  - endpoints
  - persistentvolumeclaims
  - events
  - configmaps
  - secrets
  verbs: ["get", "deletecollection", "list", "watch", "create", "update", "patch", "delete"]
- apiGroups:
  - apps
  resources:
  - deployments
  - daemonsets
  - replicasets
  - statefulsets
  verbs:
  - "*"
- apiGroups:
  - batch 
  - extensions 
  resources: ["jobs", "deployments"]
  verbs: ["get", "deletecollection", "list", "watch", "create", "update", "patch", "delete"]
---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: pgo-role-binding
  namespace: {{ namespace }}
subjects:
- kind: ServiceAccount
  name: postgres-operator
  namespace: {{ namespace }}
roleRef:
  kind: Role
  name: pgo-role
  apiGroup: rbac.authorization.k8s.io
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: pgo-backrest
  namespace: {{ namespace }}
---
kind: Role
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: pgo-backrest-role
  namespace: {{ namespace }}
rules:
- apiGroups: [""]
  resources: ["pods"]
  verbs: ["get", "list"]
- apiGroups: [""]
  resources: ["pods/exec"]
  verbs: ["create"]
---
kind: RoleBinding
apiVersion: rbac.authorization.k8s.io/v1beta1
metadata:
  name: pgo-backrest-role-binding
  namespace: {{ namespace }}
subjects:
- kind: ServiceAccount
  name: pgo-backrest
  namespace: {{ namespace }}
roleRef:
  kind: Role
  name: pgo-backrest-role
  apiGroup: rbac.authorization.k8s.io
